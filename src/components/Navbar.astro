---

<div
  x-data="{ showmenu: false }"
  class="p-4 fixed lg:static w-full bg-white"
>
  <div id="navbar" class="flex flex-row justify-between">
    <div id="logo" class="uppercase font-bold">
      <a href="#">Københavnerbilleder</a>
    </div>
    <nav id="desktopmenu" class="hidden lg:block">
      <ul class="flex flex-row gap-8">
        <li class="hover:uppercase"><a href="#">Københavnerbilleder</a></li>
        <li class="hover:uppercase"><a href="#">Bogens indhold</a></li>
        <li class="hover:uppercase"><a href="#">Forfatteren</a></li>
        <li class="hover:uppercase"><a href="#">Køb nu</a></li>
      </ul>
    </nav>
    <button
      id="burgermenu"
      class="lg:hidden hover:uppercase"
      x-on:click="showmenu = ! showmenu">Menu</button
    >
  </div>
  <nav
    id="mobilmenu"
    class="flex flex-col content-center pt-4"
    x-show="showmenu"
    x-transition
    x-on:click="showmenu = false"
    x-on:click.outside="showmenu = false"
  >
    <ul>
      <li class="text-center py-2 border-y-2 hover:font-bold">
        <a href="#">Københavnerbilleder</a>
      </li>
      <li class="text-center py-2 border-b-2 hover:uppercase">
        <a href="#">Bogens indhold</a>
      </li>
      <li class="text-center py-2 border-b-2 hover:uppercase">
        <a href="#">Forfatteren</a>
      </li>
      <li class="text-center py-2 border-b-2 hover:uppercase">
        <a href="#">Køb nu</a>
      </li>
    </ul>
  </nav>
</div>
